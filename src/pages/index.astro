---
import MainLayout from '../layouts/MainLayout.astro';
import GuideItem from '../components/GuideItem.astro';
---

<MainLayout 
  title="Panel de Documentación - TECNET.C.A."
  currentPage="index"
  topBarTitle="Centro de Documentación Técnica"
  topBarSubtitle="Bienvenido al Sistema de Gestión de TECNET.C.A."
>
  <div class="container">
    <div class="welcome-header">
      <h1>Bienvenido</h1>
      <p>Utiliza el menú lateral para navegar por los estándares oficiales de la empresa.</p>
    </div>

    <div class="menu-guide">
      <GuideItem 
        icon="fa-microchip"
        title="Funciones"
        description="Consulta las responsabilidades de cada cargo, alcances técnicos y diagramas de flujo de trabajo interno."
      />

      <GuideItem 
        icon="fa-clipboard-list"
        title="Protocolos"
        description="Guías paso a paso para instalaciones eléctricas, configuración de baterías LiFePO4 y soportes técnicos."
      />

      <GuideItem 
        icon="fa-envelope-open-text"
        title="Circulares"
        description="Acceso a comunicados oficiales, normativas de seguridad vigentes y actualizaciones administrativas."
      />
    </div>
  </div>
</MainLayout>

<style>
  .container {
    padding: 3rem 2rem;
    max-width: 900px;
    margin: 0 auto;
  }

  .welcome-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .welcome-header h1 {
    color: var(--primary-color);
    font-size: 2.2rem;
    margin-bottom: 10px;
  }

  .welcome-header p {
    color: #666;
    font-size: 1.1rem;
  }

  .menu-guide {
    display: grid;
    gap: 1.5rem;
  }
</style>
