---
const { title = 'Centro de Documentación Técnica', subtitle = 'Bienvenido al Sistema de Gestión de TECNET.C.A.' } = Astro.props;
---

<header class="top-bar">
  <button class="toggle-btn" onclick="toggleMenu()" style="display:none;">
    <i class="fas fa-bars"></i>
  </button>
  <div class="header-info">
    <h1>{title}</h1>
    <p>{subtitle}</p>
  </div>
  <div style="font-size: 0.8rem; opacity: 0.8;">v1.0</div>
</header>

<style>
  .top-bar {
    background-color: var(--primary-color);
    color: white;
    padding: 1.5rem 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .top-bar h1 {
    margin: 0;
    font-size: 1.8rem;
    font-weight: 700;
  }

  .top-bar p {
    margin: 0.5rem 0 0;
    font-weight: 300;
    opacity: 0.9;
  }

  .toggle-btn {
    display: none;
    background: transparent;
    border: none;
    color: white;
    font-size: 1.5rem;
    cursor: pointer;
  }

  @media (max-width: 768px) {
    .toggle-btn {
      display: block !important;
    }
  }
</style>
